{
  "validation_rules": {
    "status_code": 200,
    "content_type": "application/json",
    "headers": {
      "x-request-id": "exists",
      "x-processing-time": "numeric"
    },
    "response_structure": {
      "request_id": "string",
      "results": "array",
      "rules_processed": "number",
      "facts_processed": "number",
      "rules_fired": "number",
      "processing_time_ms": "number",
      "stats": "object"
    },
    "allow_additional_fields": true
  },
  "exact_matches": {
    "facts_processed": 5,
    "rules_processed": 2
  },
  "range_validations": {
    "rules_fired": {"min": 3, "max": 6, "inclusive": true},
    "processing_time_ms": {"min": 0, "max": 100, "inclusive": true}
  },
  "array_validations": {
    "results": {
      "min_length": 3,
      "max_length": 5
    }
  },
  "pattern_validations": {}
}